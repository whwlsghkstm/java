package Ex02;

import java.util.Scanner;

public class Sample02 {

	public static void main(String[] args) {
		
		Scanner s=new Scanner(System.in);
		
		boolean run=true;
		
		while(run) {
			System.out.println("-----------------------------------------------");
			System.out.println("1.계좌생성 | 2.계좌목록 | 3.계좌입금 | 4.계좌출금 | 5.종료");
			System.out.println("-----------------------------------------------");
			
			int menu=s.nextInt();
			switch(menu) {
				case 1:
					
					break;
					
				case 2:
					
					break;
					
				case 3:
					
					break;
					
				case 4:
					
					break;
					
				case 5:
					System.out.println("프로그램을 종료합니다.\n");
					run=false;
					break;
					
				default:
					System.out.println("잘못 입력 하셨습니다.");
					System.out.println("다시 입력해 주세요.\n");
			}
		
		}
	}

}

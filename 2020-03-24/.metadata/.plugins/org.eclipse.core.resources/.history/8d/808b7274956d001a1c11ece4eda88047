	public static void sungjuk1() {
		Scanner scanner = new Scanner(System.in);
		System.out.print("점수 > ");
		int score = scanner.nextInt();
		if(score >= 90) {
			System.out.println("학점은 A입니다.");
		}
		else if(score >= 80) {
			System.out.println("학점은 B입니다.");
		}
	}
}

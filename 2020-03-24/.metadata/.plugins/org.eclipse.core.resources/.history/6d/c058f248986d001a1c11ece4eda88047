package Ex06;

public class Sample {

	public static void main(String[] args) {
		
		// for1();
		for2();
	}
	
	/* 1~5까지 반복 출력 */
	public static void for1() {
		System.out.println(" *** 예제1 *** ");
		
		for(int i = 1; i <= 50; i+=2) {		// i+=2 == i=i+2
			System.out.println(i);
		}
	}

	/* 1~100까지의 합 */
	public static void for2() {
		System.out.println(" *** 예제2 *** ");
		int sum = 0;
		for(int i=1; i<=100; i++) {
			sum = sum + i;
			System.out.println(sum);
		}
	}
}

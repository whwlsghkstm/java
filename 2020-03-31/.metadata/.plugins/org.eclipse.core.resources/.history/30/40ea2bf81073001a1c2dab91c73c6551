package Ex03;
//성적관리용 클래스
public class Grade03 {
	
	//필드
	String gnum;
	String gname;
	int kor;
	int eng;
	int mat;
	int gsum;
	double gavg;
	
	//생성자
	public Grade03(String gnum, String gname, int kor, int eng, int mat) {
		super();
		this.gnum = gnum;
		this.gname = gname;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
	}
	
	//method
	int gsum(int kor, int eng, int mat) {
		return kor+eng+mat;
	}
	
	double gavg(int gsum) {
		return gsum/3.;
	}
	
	void printGrade(Grade03 g) {
		System.out.print(g.gnum+"\t"+g.gname+"\t"+g.kor+"\t"
				+g.eng+"\t"+g.mat+"\t"+g.gsum+"\t"+g.gavg);
	}
}

package Ex01;

import java.sql.*;
import java.util.*;

public class StudentDAO {
	
	String sql=null;
	PreparedStatement ps=null;
	ResultSet rs=null;
	
	//데이터베이스 접속 method
	public Connection con() throws Exception{
		String driver = "oracle.jdbc.driver.OracleDriver";
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String user = "system";
		String password = "1111";

		Class.forName(driver);
		Connection con=DriverManager.getConnection(url, user, password);
		return con;
	}
	
	
	//입력(insert) method
	public void insert(StudentVO vo) throws Exception{
		
		sql="insert into tab_student(snum,sname,stel) values(?,?,?)";
		ps=con().prepareStatement(sql);
		ps.setString(1, vo.getSnum());
		ps.setString(2, vo.getSname());
		ps.setString(3, vo.getStel());
		ps.execute();
	}
	
	//수정(update) method
	public void update(StudentVO vo) {
		
		sql="update tab_student set ";
	}
	
	//조회(read) method
	public StudentVO read(String snum) throws Exception{
		sql="select * from tab_student where snum=?";
		ps=con().prepareStatement(sql);
		ps.setString(1,  snum);
		rs=ps.executeQuery();
		
		StudentVO vo=new StudentVO();
		vo.setSnum(rs.getString("snum"));
		vo.setSname(rs.getString("sname"));
		vo.setStel(rs.getString("stel"));
		return vo;
	}
	
	//삭제(delete) method
	public void delete(String snum) {
		
	}
	
	//목록출력 method
//	public ArrayList<StudentVO> list() {
